<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sanbang.dao.ezs_cataMapper" >
  <resultMap id="BaseResultMap" type="ezs_goods_class" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="addTime" property="addTime" jdbcType="TIMESTAMP" />
    <result column="deleteStatus" property="deleteStatus" jdbcType="BIT" />
  </resultMap>
  <!-- 查询一级分类 -->
  <select id="getOnelevelList" resultType="ezs_goods_class" parameterType="java.lang.String" >
    select * from ezs_goods_class gc where gc.parent_id = ''
  </select>
  
  <!-- 查询二级分类 -->
  <select id="getTwolevelList" resultType="ezs_goods_class" parameterType="java.lang.Long" >
    select * from ezs_goods_class gc where gc.parent_id = '1'
  </select>
  
  <!-- 查询三级分类 -->
  <select id="getThreelevelList" resultType="ezs_goods_class" parameterType="java.lang.Long" >
    select * from ezs_goods_class gc where gc.parent_id = '2'
  </select>
  
  <!-- 自营，地区、品类筛选 -->
  <select id="listByAreaAndType" resultType="ezs_goods_class" parameterType="java.lang.String" >
    select * from ezs_goods_class gc where 
    <if test="level !=null and studentSex != '' ">  
        gc.level = #{level, jdbcType=BIGINT}   
    </if>    
  </select>
  
